<div class="row">
    <div class="col-md-12">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div id="my-alert" class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
                <div class="alert-message">
                {{ "now"|date("d/m/Y H:i:s", "Europe/Paris") }} : {{ message|trans({}, 'flashes') }}           
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    </div>
</div>
<script>
    // Récupérer la div à masquer
    var myDiv = document.getElementById('my-alert');

    // Masquer la div après 5 secondes
    setTimeout(function() {
        myDiv.style.display = 'none';
    }, 5000);
</script>
